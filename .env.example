# Environment Configuration for AuthBasic

# Application Environment
# Options: development, production, testing
APP_ENV=development
APP_DEBUG=true # Set to false in production

# Application URL
# Used for generating links in emails, etc.
# Ensure this is the correct base URL for your application.
# Example: http://localhost/authbasic or https://yourdomain.com
# The config.php will try to build this dynamically if not set, but this is more explicit.
APP_URL=http://localhost/authbasic
# If your app is in a subdirectory of the domain, specify it here (e.g., /authbasic)
# If it's at the root, leave empty or comment out.
APP_SUBDIRECTORY=/authbasic


# Database Credentials
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=authbasic_db
DB_USERNAME=root
DB_PASSWORD=

# SMTP Mail Credentials
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_gmail_username@gmail.com
MAIL_PASSWORD=your_gmail_app_password_or_regular_password
MAIL_ENCRYPTION=tls # or 'ssl' for port 465
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="AuthBasic System"

# Timezone
APP_TIMEZONE="Asia/Manila"